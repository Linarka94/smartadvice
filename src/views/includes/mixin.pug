mixin productOutput(pageName, iconClassName, linkTitle, iconDescription)
  a(class!="reasons-item-icon _prop-icon-" + iconClassName href="#")
    svg(class!="icon-" + iconClassName)
      use(xlink:href!="#icon-" + iconClassName)
  a(class="reasons-item-title" href="#") #{linkTitle}
  p.reasons-item-text #{iconDescription}

mixin commentsOutput(userId, userName, commentText, commentTimePass, likesValue, dislikesValue)
  ul.comments-item
    li.comments-item-avatar
      a(class!="avatar-user"+userId href="#")

    li.comments-item-name #{userName}

    li.comments-item-text #{commentText}

    li.comments-item-info
      div.info-time
        svg.icon-watch
          use(xlink:href="#icon-watch") 
        | #{commentTimePass} ago

      div.info-rating
        a(class="info-rating-like" href="#") 
          svg.icon-like
            use(xlink:href="#icon-like")
          | #{likesValue}
        a(class="info-rating-dislike" href="#") 
          svg.icon-dislike
            use(xlink:href="#icon-dislike")
          | #{dislikesValue}

mixin articleOutput(M_image, M_category, M_title, M_views, M_date, M_text)
  div.article-item-img
    a(href="/detail.html" class="article-item-link visible-xs")
    if (M_image)
      img(class="image-style" src!="assets/img/"+M_image)
  div.article-item-category #{M_category}
  div.article-item-viewfull
    button(class="btn-readmore" onclick="location.href='/detail.html'") Read More
  div.article-item-title #{M_title}
  ul.article-item-info
    li.article-views
      svg.icon-views
        use(xlink:href="#icon-views")
      p.article-views-number #{M_views}
      p.article-views-text.hidden-xs Views
    li.article-date 
      svg.icon-watch
        use(xlink:href="#icon-watch")
      | #{M_date}
  p.article-item-text #{M_text}

mixin shareIconsOutput(iconName)
  li(class!="share-item" )
    a(href="#")
      svg(class!="icon-" + iconName )
        use(xlink:href!="#icon-" + iconName )

mixin favicon() 
  link(rel="icon" type="image/png" href="assets/img/favicon/32.png" sizes="32x32")
  link(rel="icon" type="image/png" href="assets/img/favicon/16.png" sizes="16x16")
  link(rel="apple-touch-icon" href="/assets/img/favicon/180.png" sizes="180x180")
